                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Options Alignment</label>
                <dataScope>gomage_options_alignment</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="GoMage\Navigation\Model\Config\Source\Image\Alignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="gomage_image_width" sortOrder="80" formElement="input">
            <settings>
                <validation>
                    <rule name="validate-digits" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Image Width, px</label>
                <dataScope>gomage_image_width</dataScope>
            </settings>
        </field>
        <field name="gomage_image_height" sortOrder="90" formElement="input">
            <settings>
