<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="my_fieldset" sortOrder="40">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="valuesForOptions" xsi:type="array">
                    <item name="media_image" xsi:type="string">media_image</item>
                </item>
                <item name="openOnShow" xsi:type="boolean">false</item>
                <item name="inverseVisibility" xsi:type="boolean">true</item>
            </item>
        </argument>
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">GoMage Advanced Navigation Properties</label>
        </settings>
        <field name="gomage_filter_type" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attribute</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Filter Input</label>
                <dataScope>gomage_filter_type</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="GoMage\Navigation\Model\Config\Source\Navigation"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="gomage_is_show_filter_button" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Filter Button</label>
                <dataScope>gomage_is_show_filter_button</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="gomage_max_block_height" sortOrder="30" formElement="input">
            <settings>
                <validation>
                    <rule name="validate-digits" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Max Block Height, px</label>
                <dataScope>gomage_max_block_height</dataScope>
            </settings>
        </field>
        <field name="gomage_is_ajax" sortOrder="40" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Use Ajax</label>
                <dataScope>gomage_is_ajax</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="gomage_is_collapsed" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Collapsed</label>
                <dataScope>gomage_is_collapsed</dataScope>
