?>
<?php
/**
 *
 * @var $block \GoMage\Navigation\Block\Navigation
 */

$helper = $this->helper('GoMage\Navigation\Helper\Data');
$render = $this->getLayout()->createBlock('GoMage\Navigation\Block\Navigation\FilterRenderer');
$state = $this->getLayout()->createBlock('GoMage\Navigation\Block\Navigation\State');
$block->setChild('state',$state);

?>

<?php if ($block->canShowBlock()): ?>
    <div class="block filter gan-sidebar-position" data-role="navigation" data-mage-init='{"navigation": {
                        "addFilterResultsToUrl": "<?php echo $helper->isAddFilterResultsToUrl()?>",
                        "navigationPlace": "<?php echo $helper->getShowShopByIn(); ?>",
                        "categoriesPlace": "<?php echo $helper->getCategoriesBlockLocation(); ?>"
                        }}'>
        <div class="block-content filter-content">
            <?if ($helper->isShowAppliedValuesInResults()):?>
                <?php echo $state->toHtml() ?>
                <?php if ($block->getLayer()->getState()->getFilters()): ?>
                    <div class="block-actions filter-actions">
                        <a href="<?php /* @escapeNotVerified */ echo $block->getClearUrl() ?>"
                           class="action clear filter-clear"
                           data-role="navigation-filter"
                           data-ajax="1"
                           data-clear="1">
                            <span><?php /* @escapeNotVerified */ echo __('Clear All') ?></span>
                        </a>
                    </div>
                <?php endif; ?>
            <?php endif;?>
            <?php $wrapOptions = false; ?>

                <div class="filter-subtitle2"><?php /* @escapeNotVerified */ echo __('Add Filter:') ?></div>

                <?php foreach ($block->getFilters() as $filter): ?>
                    <?php if (!$wrapOptions): ?>
                        <strong role="heading" aria-level="2" class="block-subtitle filter-subtitle"><?php /* @escapeNotVerified */ echo __('Shopping Options') ?></strong>
                        <dl class="filter-options" id="narrow-by-list" data-role="content" data-mage-init='{"accordion":{"openedState": "active", "collapsible": true, "active": <?php echo json_encode($block->getExpandedFilters());?>, "multipleCollapsible": true}}'>

                        <?php $wrapOptions = true; endif; ?>

                        <?php if ($filter->getItemsCount()): ?>
                        <div data-role="collapsible" class="filter-options-item">
                            <dt data-role="title" role="heading" aria-level="3" class="filter-options-title"><?php echo $block->escapeHtml(__($filter->getName())) ?></dt>
                            <dd data-role="content" class="filter-options-content"><?php /* @escapeNotVerified */ echo $render->render($filter); ?></dd>
                        </div>
                           <?php endif; ?>
                <?php endforeach; ?>
                <?php if ($wrapOptions): ?>
                    </dl>
                <?php endif; ?>

        </div>
    </div>
<?php endif; ?>
