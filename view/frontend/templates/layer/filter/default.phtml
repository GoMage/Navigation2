<?php
/**
 *
 * @var $block \Gomage\Navigation\Block\Navigation\FilterRenderer
 */

$filter = reset($filterItems)->getFilter();
$helper = $this->helper('GoMage\Navigation\Helper\Data');

?>
<ol class="items gan-filter gan-filter-default <?php if($filter->getGomageFilterType() == \GoMage\Navigation\Model\Config\Source\Navigation::IN_BLOCK) echo 'gan-filter-in-block'; ?> <?php echo $filter->canShowMinimized() ? "filter-content-hide" : "filter-content-show"; ?>" <?php if($filter->getGomageFilterType() == \GoMage\Navigation\Model\Config\Source\Navigation::IN_BLOCK && $filter->getGomageMaxBlockHeight()): ?>style="max-height:<?php echo $filter->getGomageMaxBlockHeight(); ?>px;"<?endif;?>>

    <?php foreach ($filterItems as $item): ?>
        <li class="item">
            <?php if ($item->getCount() > 0 && $item->isShowAppliedValues()): ?>
                <a <?php if(!$item->getIsActive()):?> href="<?php echo $item->getGomageUrl(); ?> <?endif;?>"
                    <?php if($item->getIsActive()):?>
                        class="active"
                    <?endif;?>
                   data-role="navigation-filter"
                   data-url="<?php if(!$item->getIsActive()):?><?php echo $item->getGomageUrl(); ?> <?endif;?>"
                   data-value="<?php echo $item->getGomageValue() ?>"
                   data-param="<?php echo $filter->getRequestVar() ?>"
                   <?if ($filter->getGomageIsAjax()):?>
                    data-ajax="1"
                   <?endif;?>
                   data-type="<?php echo (int) $filter->getGomageFilterType(); ?>"
                   <?php if($item->getIsActive()):?>
                    data-active="1">
                    <?php endif;?>
                    <span class="filter-label-text"><?php echo $item->getLabel() ?></span>
                    <? if ($helper->isShowValueQty()): ?>
                        <span class="count"><?php echo $item->getCount() ?><span class="filter-count-label">
                        <?php if ($item->getCount() == 1): ?><?php echo __('item') ?><?php else: ?><?php echo __('items') ?><?php endif; ?></span></span>
                    <? endif; ?>
                </a>
            <?php endif; ?>
        </li>
    <?php endforeach ?>
</ol>
