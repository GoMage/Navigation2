/** @var $block \Magento\Swatches\Block\LayeredNavigation\RenderLayered */
?>

<?php
$filter = reset($filterItems)->getFilter();
$swatchData = $block->getSwatch()->setSwatchFilter($filter)->getSwatchData();
$swatchData = $block->prepareSwatchesData($swatchData, $filterItems);
?>

<div class="swatch-attribute swatch-layered <?php /* @escapeNotVerified */
echo $swatchData['attribute_code'] ?>"
     attribute-code="<?php /* @escapeNotVerified */
     echo $swatchData['attribute_code'] ?>" attribute-id="<?php /* @escapeNotVerified */
echo $swatchData['attribute_id'] ?>">
    <div class="swatch-attribute-options clearfix">
        <?=$block->getTooltip($filter)->toHtml()?>
        <?php foreach ($swatchData['options'] as $option => $data): ?>
            <?php
                if (!$data['is_show']) continue;
                $selected = '';
            ?>
            <a  href="<?php /* @escapeNotVerified */
            echo $data['link'] ?>"
               data-role="navigation-filter"
                data-value="<?php echo (!empty($data['gomage_value'])) ? $data['gomage_value'] : $option; ?>"
               data-param="<?php echo $filter->getRequestVar() ?>"
                <?php if($filter->getGomageIsAjax()):?>
                data-ajax="1"
                <?endif;?>
               data-type="<?php echo $filter->getSwatchInputType(); ?>"
                <? if (!empty($data['is_active'])) : ?>
                <?php $selected = 'selected';?>
               data-active="1"
                <? endif; ?>
               class="swatch-option-link-layered">
                <?php if (isset($swatchData['swatches'][$option]['type'])) { ?>
                    <?php switch ($swatchData['swatches'][$option]['type']) {
                        case '3':
                            ?>
                            <div class="<?php echo $selected;?> swatch-option <?php /* @escapeNotVerified */
                            echo $data['custom_style'] ?>"

                                 option-type="3"
                                 option-id="<?php /* @escapeNotVerified */
                                 echo $option ?>"
                                 option-label="<?php /* @escapeNotVerified */
                                 echo $data['label'] ?>"
                                 option-tooltip-thumb=""
                                 option-tooltip-value=""
                            ></div>
                            <?php break;
                        case '2':
                            ?>
                            <?php $swatchThumbPath = $block->getSwatch()->getSwatchPath('swatch_thumb',
                            $swatchData['swatches'][$option]['value']); ?>
                            <?php $swatchImagePath = $block->getSwatch()->getSwatchPath('swatch_image',
                            $swatchData['swatches'][$option]['value']); ?>
                            <div class="<?php echo $selected;?> swatch-option image <?php /* @escapeNotVerified */
                            echo $data['custom_style'] ?>"
                                 option-type="2"
                                 option-id="<?php /* @escapeNotVerified */
                                 echo $option ?>"
                                 option-label="<?php /* @escapeNotVerified */
                                 echo $data['label'] ?>"
                                 option-tooltip-thumb="<?php /* @escapeNotVerified */
                                 echo $swatchThumbPath ?>"
                                 option-tooltip-value=""
                                 style="background: url(<?php /* @escapeNotVerified */
                                 echo $swatchImagePath ?>) no-repeat center; background-size: initial;"></div>
                            <?php break;
                        case '1':
                            ?>
                            <div class="<?php echo $selected;?> swatch-option color <?php /* @escapeNotVerified */
                            echo $data['custom_style'] ?>"
                                 option-type="1"
                                 option-id="<?php /* @escapeNotVerified */
                                 echo $option ?>"
                                 option-label="<?php /* @escapeNotVerified */
                                 echo $data['label'] ?>"
                                 option-tooltip-thumb=""
                                 option-tooltip-value="<?php /* @escapeNotVerified */
                                 echo $swatchData['swatches'][$option]['value'] ?>"
                                 style="background: <?php /* @escapeNotVerified */
                                 echo $swatchData['swatches'][$option]['value'] ?> no-repeat center; background-size: initial;"></div>
                            <?php break;
                        case '0':
                        default:
                            ?>
                            <div class="<?php echo $selected;?> swatch-option text <?php /* @escapeNotVerified */
                            echo $data['custom_style'] ?>"
                                 option-type="0"
                                 option-id="<?php /* @escapeNotVerified */
                                 echo $option ?>"
                                 option-label="<?php /* @escapeNotVerified */
                                 echo $data['label'] ?>"
                                 option-tooltip-thumb=""
                                 option-tooltip-value=""
                            ><?php /* @escapeNotVerified */
                                echo $swatchData['swatches'][$option]['value'] ?></div>
                            <?php break;
                    } ?>
                <?php } ?>
            </a>
        <?php endforeach; ?>
    </div>
</div>

<script>
    require(["jquery", "jquery/ui", "Magento_Swatches/js/swatch-renderer"], function ($) {
        $('.swatch-layered.<?php /* @escapeNotVerified */ echo $swatchData['attribute_code'] ?>')
            .find('[option-type="1"], [option-type="2"], [option-type="0"], [option-type="3"]')
            .SwatchRendererTooltip();
    });
</script>
