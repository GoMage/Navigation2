<?
/**
 * @var $block \GoMage\Navigation\Block\Navigation\State
 */
?>
<? $filters = $block->getActiveFilters() ?>
<? if (!empty($filters)): ?>
<div class="filter-current active">
    <strong class="block-subtitle filter-current-subtitle"
            role="heading"
            aria-level="2"
            data-count="<?=(int)count($filters); ?>"><?= __('Applied Filters:') ?></strong>
    <ol class="items">
        <? foreach ($filters as $filter): ?>
            <li class="item">
                <span class="filter-label"><?=$block->escapeHtml(__($filter->getName())); ?></span>
                <div class="filter-value-wrap">
                    <span class="filter-value"><?= $block->escapeHtml($filter->getLabel(), ['span']) ?></span>
                    <? $currentFilterName = $block->escapeHtml(__($filter->getName()) . " " . $filter->getLabel()); ?>
                    <a class="action remove"
                       href="#"
                       title="<?= $block->escapeHtml(__('Remove') . " " . $currentFilterName);?>"
                       data-role="navigation-filter"
                       data-value="<?=$block->escapeHtml($filter->getRemoveValue()) ?>"
                       data-url="<?= $block->escapeHtml($filter->getRemoveUrl()) ?>"
                       data-param-to-remove="<?=$block->escapeHtml($filter->getFilter()->getRequestVar()) ?>"
                        <?if ($filter->getFilter()->getGomageIsAjax() || is_null($filter->getFilter()->getGomageIsAjax())):?>
                            data-ajax="1"
                        <?else:?>
                            data-ajax="0"
                        <?endif;?>
                       data-type="remove-item"
                       data-active="1">
                        <span><?= __('Remove This Item') ?></span>
                    </a>
                </div>
            </li>
        <? endforeach; ?>
    </ol>
</div>
<? endif; ?>
