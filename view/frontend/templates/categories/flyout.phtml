<div class="block block-gan-categories gan-categories-flyout"
     style="background-color: <?=$block->escapeHtmlAttr($block->getNavigationViewHelper()->getNavigationViewBlockCategoriesBackgroundColor())?>"
>
    <div class="block-title gan-categories-title" data-role="navigation-filter" data-type="categories-content">
        <strong><?= __('Categories') ?></strong>
    </div>
    <div class="block-content block-content-gan-categories">
        <div class="block-content-in" <?= ($block->getCategoriesDataHelper()->isCategoriesShowCollapsed()) ? 'style="display:none;"' : '';?>>
            <ul class="gan-categories-list">
                <?
                foreach($block->getStoreCategories() as $category):
                     if (!$category->getIsActive()) continue;?>
                    <li
                            data-ajax="<?= (int)$block->getCategoriesDataHelper()->isAjax(); ?>"
                            data-role="navigation-filter"
                            data-type="categories-li"
                            data-url="<?= $block->escapeUrl($block->getCategoryHelper()->getCategoryUrl($category)) ?>">
                        <a href="#"<?= ($block->getCurrentCategoryId() == $category->getId()) ? ' class="selected"' : ''; ?>>
                            <?= $block->escapeHtml($category->getName()) ?>
                        </a>
                        <?= $block->getOlList($block->getChildCategories($category)); ?>
                    </li>
                <? endforeach; ?>
            </ul>
        </div>
    </div>
</div>
