                            href="#">
                            <img width="<?=($block->getDataHelper()->getCategoriesImageWidth()) ? $block->getDataHelper()->getCategoriesImageWidth() : '';?>"
                                 height="<?=($block->getDataHelper()->getCategoriesImageHeight()) ? $block->getDataHelper()->getCategoriesImageHeight() : '';?>"
                                 src="<?= $block->getCategoryImage($category->getEntityId()) ?>"
                            >
                            <?php if($block->getDataHelper()->isShowImageName()): ?>
                                <span><?= $category->getName();?></span>
                            <?endif;?>
