<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="GoMage_Navigation::css/jslider.css" />
        <css src="GoMage_Navigation::css/jslider.blue.css" />
        <css src="GoMage_Navigation::css/jslider.plastic.css" />
        <css src="GoMage_Navigation::css/jslider.round.css" />
        <css src="GoMage_Navigation::css/jslider.round.plastic.css" />
        <css src="GoMage_Navigation::css/gomage-navigation.css" />
    </head>
    <body>
    <referenceContainer name="sidebar.main" >
        <block class="GoMage\Navigation\Block\Categories" name="gomage.categories" before="-"/>
        <block class="GoMage\Navigation\Block\Navigation" name="catalog.leftnav" after="gomage.categories">
            <block class="GoMage\Navigation\Block\Navigation\State" name="catalog.navigation.state" as="state" />
            <block class="GoMage\Navigation\Block\Navigation\FilterRenderer" name="catalog.navigation.renderer" as="renderer"/>
        </block>
    </referenceContainer>
    <referenceBlock name="product_list_toolbar_pager">
        <arguments>
            <argument name="template" xsi:type="string">GoMage_Navigation::html/pager.phtml</argument>
        </arguments>
    </referenceBlock>
    <referenceBlock name="product_list_toolbar">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">GoMage_Navigation::product/list/toolbar.phtml</argument>
        </action>
    </referenceBlock>
    </body>
</page>