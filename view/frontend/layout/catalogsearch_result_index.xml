<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="GoMage_Navigation::css/jslider.css" />
        <css src="GoMage_Navigation::css/jslider.blue.css" />
        <css src="GoMage_Navigation::css/jslider.plastic.css" />
        <css src="GoMage_Navigation::css/jslider.round.css" />
        <css src="GoMage_Navigation::css/jslider.round.plastic.css" />
        <css src="GoMage_Navigation::css/gomage-navigation.css" />
    </head>
    <body>
        <referenceContainer name="sidebar.main" >
            <block class="GoMage\Navigation\Block\Categories" name="gomage.categories">
                <action method="unsetChild" ifconfig="gomage_navigation/category/shop_by">
                    <argument name="block" xsi:type="helper" helper="GoMage\Navigation\Helper\Data::removeBlocCategoriesOrCategory" />
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
